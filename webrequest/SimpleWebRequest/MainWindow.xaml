<Window x:Class="SimpleWebRequest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Single Product" Height="300" Width="400"
        Loaded="Window_Loaded">

    <Grid>
        <StackPanel Margin="10" Orientation="Vertical">

            <!-- Label for Id -->
            <TextBlock Text="ID:" FontWeight="Bold" />
            <TextBox Text="{Binding Id}" Margin="0,0,0,10" IsReadOnly="True" />

            <!-- Label for Name -->
            <TextBlock Text="Name:" FontWeight="Bold" />
            <TextBox Text="{Binding Name}" Margin="0,0,0,10" />

            <!-- Label for Price -->
            <TextBlock Text="Price:" FontWeight="Bold" />
            <TextBox Text="{Binding Price}" Margin="0,0,0,10" />

            <!-- Label for ShortDescription -->
            <TextBlock Text="Description:" FontWeight="Bold" />
            <TextBox Text="{Binding ShortDescription}" Margin="0,0,0,10" />

        </StackPanel>
    </Grid>
</Window>
