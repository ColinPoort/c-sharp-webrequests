<Window x:Class="Webrequest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Products" Height="400" Width="600" Loaded="Window_Loaded">
    <Grid>
        <DataGrid ItemsSource="{Binding Products}" AutoGenerateColumns="False" Margin="10" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding ShortDescription}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding ProductType}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Add Product" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="10" Width="100" Click="AddProduct_Click"/>
    </Grid>
</Window>
